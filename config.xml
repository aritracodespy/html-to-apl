<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.myapp" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>Ipfetch</name>

    <description>
        A custom Cordova app built from HTML, CSS, and JavaScript to fetch IP info.
    </description>

    <author email="yourname@example.com" href="https://yourwebsite.com">
        ipConfigInfo
    </author>

    <content src="index.html" />

    <!-- Allow navigation to any web resource -->
    <allow-navigation href="*" />

    <!-- Allow intents to all external links -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- General Preferences -->
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="false" />
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="FadeSplashScreenDuration" value="500" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="true" />

    <!-- Android specific configuration -->
    <platform name="android">
        <!-- Allow all origins -->
        <access origin="*" />

        <!-- Internet permission (fixed syntax) -->
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET" />
        </config-file>

        <!-- Optional: override app label -->
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:label="Ipfetch" />
        </edit-config>
    </platform>
</widget>
